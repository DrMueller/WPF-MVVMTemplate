<UserControl x:Class="$safeprojectname$.UserControls.InformationBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:$safeprojectname$.UserControls"
             x:Name="uc"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBox 
            MaxHeight="100"
            Text="{Binding ConcatedInformationText, ElementName=uc, Mode=OneWay}"
            HorizontalAlignment="Left" 
            IsReadOnly="True" 
            Style="{StaticResource InformationBar}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
    </Grid>
</UserControl>
